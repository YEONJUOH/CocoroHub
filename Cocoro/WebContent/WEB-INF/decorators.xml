<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/layout">

	<!-- 헤더,풋터만 -->
	<decorator name="main" page="layout.jsp">
		<pattern>/jsp.jsp</pattern>
		<pattern>/jsp/*</pattern>
		<pattern>/page.jsp</pattern>
		<pattern>/page/*</pattern>
	</decorator>
	
	<!-- 헤더, 풋터, 사이드바 --> 
	<decorator name="main2" page="layout2.jsp">
		<pattern></pattern>
		<pattern></pattern>
	</decorator>
	<excludes>
		<pattern>/jsp/exclude.jsp</pattern>
		<pattern>/page/exclude.jsp</pattern>
	</excludes>
</decorators>